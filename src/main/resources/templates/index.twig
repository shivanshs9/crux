{% extends 'base.twig' %}

{% block header %}
{% include 'header-nav.twig' %}
{% endblock %}

{% block content %}

<div class="workscout-search-banner jobs-search-banner  with-transparent-header parallax background " data-diff="300"
	 data-img-height="" data-img-width="" id="banner"
	 style="background-image: url(https://workscout.wpengine.com/wp-content/uploads/2017/06/banner-home-02.jpg);">
	<div class="container">
		<div class="sixteen columns">
		</div>
	</div>
</div>

<!-- 960 Container -->
<div class="container page-container home-page-container">
	<article class="sixteen columns post-9 page type-page status-publish hentry">
		<div class="vc_row wpb_row vc_row-fluid vc_custom_1521229758973">
		</div>
		<div class="vc_row wpb_row vc_row-fluid vc_row-no-padding" data-vc-full-width="true"
			 data-vc-full-width-init="false" data-vc-stretch-content="true">
			<div class="wpb_column vc_column_container vc_col-sm-12">
				<div class="vc_column-inner ">
					<div class="wpb_wrapper">
						<div class="vc_separator wpb_content_element vc_separator_align_center vc_sep_width_100 vc_sep_pos_align_center vc_separator_no_text vc_sep_color_grey vc_custom_1521227854183  vc_custom_1521227854183">
							<span class="vc_sep_holder vc_sep_holder_l"><span class="vc_sep_line"></span></span><span
								class="vc_sep_holder vc_sep_holder_r"><span class="vc_sep_line"></span></span>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="vc_row-full-width vc_clearfix"></div>
		<div class="vc_row wpb_row vc_row-fluid">
			<div class="wpb_column vc_column_container vc_col-sm-8">
				<div class="vc_column-inner ">
					<div class="wpb_wrapper"><H3 class="margin-top-0 margin-bottom-25">Upcoming Tests</H3>
						<div class="wpb_text_column wpb_content_element ">
							<div class="wpb_wrapper">
								<div class="job_listings " data-categories="" data-job_types="" data-keywords=""
									 data-location="" data-order="DESC" data-orderby="featured" data-per_page="4"
									 data-show_filters="false" data-show_pagination="false">
									<!-- Listings Loader -->
									<div class="listings-loader">
										<div class="spinner">
											<div class="double-bounce1"></div>
											<div class="double-bounce2"></div>
										</div>
									</div>

									<ul class="job_listings job-list full  new-layout hide-desc">
										{% for test in tests %}
										<li>
											<a class="left job_listing" href="/tests/{{ test.id }}/summary">
												<div class="listing-logo"></div>
												<div class="listing-title">
													<h4>{{ test.name }}
														<span class="job-type freelance">Register</span>
													</h4>
													<ul class="listing-icons">
														<li title="Start Time"><i class="ln ln-icon-Alarm"></i> {{ test.startTimeString }}
														</li>
														<li title="Test Duration"><i class="ln ln-icon-Alarm"></i> {{ test.durationString }}
														</li>
														<li title="Registration count"><i class="ln ln-icon-Business-Mens"></i> {{ test.registrationCount }}
													</ul>
												</div>
											</a>
										</li>
										{% endfor %}
									</ul>
									<div class="margin-bottom-55"></div>
								</div>

							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="wpb_column vc_column_container vc_col-sm-4">
				<div class="vc_column-inner ">
					<div class="wpb_wrapper">
						<h3 class="margin-bottom-5">Company Spotlight</h3>
						<!-- Navigation -->
						<div class="showbiz-navigation">
							<div class="sb-navigation-left" id="showbiz_left_29"><i class="fa fa-angle-left"></i></div>
							<div class="sb-navigation-right" id="showbiz_right_29"><i class="fa fa-angle-right"></i>
							</div>
						</div>
						<div class="clearfix"></div>

						<!-- Showbiz Container -->
						<div class="job-spotlight-car showbiz-container" data-autoplay="off" data-delay="5000"
							 data-visible="[1,1,1,1]" id="job-spotlight">
							<div class="showbiz" data-left="#showbiz_left_29" data-play="#showbiz_play_29"
								 data-right="#showbiz_right_29">
								<div class="overflowholder">
									<ul>
										{% for company in businesses %}
										<li>
											<div class="job-spotlight">
												<h4>{{ company.name }}
													<span class="job-type part-time">{{ company.category }}</span>
												</h4>

												<span class="ws-meta-company-name"><i class="fa fa-briefcase"></i>{{ company.city }}</span>
												<span class="ws-meta-job-location"><i class="fa fa-map-marker"></i>{{ company.state }}</span>
												<span class="ws-meta-job-location"><i class="fa fa-map-marker"></i>{{ company.country }}</span>

												<p></p>
											</div>
										</li>
										{% endfor %}
									</ul>
									<div class="clearfix"></div>

								</div>
								<div class="clearfix"></div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="vc_row wpb_row vc_row-fluid vc_custom_1521210767063 vc_row-has-fill vc_row-no-padding"
			 data-vc-full-width="true" data-vc-full-width-init="false" data-vc-stretch-content="true">
			<div class="wpb_column vc_column_container vc_col-sm-12">
				<div class="vc_column-inner ">
					<div class="wpb_wrapper"><h3 class="centered headline margin-top-0 margin-bottom-25 "
												 style="text-align:center;">What Our Users Say üòç<span
							class="margin-top:25px;">We collect reviews from our users so you can get an honest opinion of what an experience with our website are really like!</span>
					</h3>
						<!-- Testimonials Carousel -->
						<div class="fullwidth-carousel-container margin-top-20">
							<div class="testimonial-carousel testimonials">

								<!-- Item -->
								<div class="fw-carousel-review">

									<div class="testimonial-box">
										<div class="testimonial"><p>I have already heard back about the internship I
											applied through WorkScout, that&#8217;s the fastest job reply I&#8217;ve
											ever gotten and it&#8217;s so much better than waiting weeks to hear
											back.</p>
										</div>
									</div>
									<div class="testimonial-author">
										<img alt="" class="attachment-post-thumbnail size-post-thumbnail wp-post-image"
											 height="130" sizes="(max-width: 130px) 100vw, 130px"
											 src="https://39sf152pf74z2negmt1gi8ik-wpengine.netdna-ssl.com/wp-content/uploads/2015/10/resumes-list-avatar-03.png"
											 srcset="https://39sf152pf74z2negmt1gi8ik-wpengine.netdna-ssl.com/wp-content/uploads/2015/10/resumes-list-avatar-03.png 130w, https://39sf152pf74z2negmt1gi8ik-wpengine.netdna-ssl.com/wp-content/uploads/2015/10/resumes-list-avatar-03-100x100.png 100w"
											 width="130"/>                    <h4>John Smith <span>Jobseeker</span></h4>
									</div>
								</div>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="vc_row-full-width vc_clearfix"></div>
		<div class="vc_row wpb_row vc_row-fluid vc_custom_1521201754193 vc_row-has-fill vc_row-no-padding"
			 data-vc-full-width="true" data-vc-full-width-init="false" data-vc-stretch-content="true">
			<div class="wpb_column vc_column_container vc_col-sm-12">
				<div class="vc_column-inner ">
					<div class="wpb_wrapper">
						<!-- Flip banner -->
						<a class="flip-banner parallax"
						   data-background="https://workscout.in/wp-content/uploads/2018/03/all-categories-photo.jpg"
						   data-color="#26ae62" data-color-opacity="0.92" data-img-height="1600" data-img-width="2500"
						   href="#">

							<div class="flip-banner-content">
								<h2 class="flip-visible">Step inside and see for yourself!</h2>
								<h2 class="flip-hidden">Get Started <i class="fa fa-angle-right"></i></h2>
							</div>
						</a>
						<!-- Flip banner / End -->
					</div>
				</div>
			</div>
		</div>
		<div class="vc_row-full-width vc_clearfix"></div>
	</article>
</div>

{% endblock %}

{% block extra_scripts %}
<script type="text/javascript">
	(function($){

	$(document).ready(function(){

		$( '.sc-jobs #search_keywords' ).autocomplete({

			source: function(req, response){
				$.getJSON('https://workscout.in/wp-admin/admin-ajax.php'+'?callback=?&action=workscout_incremental_jobs_suggest', req, response);
			},
			select: function(event, ui) {
				window.location.href=ui.item.link;
			},
			minLength: 3,
		});
	 });

	})(this.jQuery);

</script>

<script type="text/javascript">
(function($){
	$(document).ready(function() {
		if (window.location.search == "?login") {
			$("#login-link").click();
		}
	});
})(this.jQuery);
</script>
{% endblock %}